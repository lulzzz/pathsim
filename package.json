{
  "name": "pathsim",
  "version": "1.0.0",
  "description": "path algorithm simulator",
  "main": "index.html",
  "private": true,
  "dependencies": {
    "angular": "1.5.3",
    "js-priority-queue": "^0.1.5",
    "lodash": "^4.7.0",
    "systemjs": "^0.19.38"
  },
  "devDependencies": {
    "concurrently": "^2.0.0",    
    "lite-server": "^2.2.0",
    "mocha": "^3.1.0",
    "mocha-typescript": "^1.0.10",
    "typescript": "^1.8.10",
    "typings": "^1.3.3"
  },
  "scripts": {
    "start": "tsc && concurrently \"npm run tsc:w\" \"npm run lite\" ",
    "dev-test-watch": "mocha-typescript-watch",
    "pretest": "rm -rf test && tsc  -p tsconfig.test.json",
    "test": "mocha test/ --colors",
    "test:w":"npm run pretest && concurrently \"tsc -w -p tsconfig.test.json\" \"mocha test/ --watch --colors --reporter min\"",
    "lite": "lite-server",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "typings": "typings",
    "postinstall": "typings install"
  },
  "author": "Oliver Guhr",
  "license": "MIT"
}
